{% extends 'base.html.twig' %}

{% block title %}Ad{% endblock %}

{% block body %}
    <h1>Ad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ad.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ad.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ad.description }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ ad.images ? ad.images|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ad.Price }}</td>
            </tr>
            <tr>
                <th>DatePosted</th>
                <td>{{ ad.DatePosted ? ad.DatePosted|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ad_index') }}">back to list</a>

    <a href="{{ path('app_ad_edit', {'id': ad.id}) }}">edit</a>

    {{ include('ad/_delete_form.html.twig') }}
{% endblock %}
