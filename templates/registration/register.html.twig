{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block header_content %}Inscription{% endblock %}

{% block body %}
    <form method="post" class="login-form">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, { 'attr': { 'class': 'login-form-inner' } }) }}
            {{ form_row(registrationForm.email, { 'label': 'Email:' }) }}
            {{ form_row(registrationForm.username, { 'label': 'Username:' }) }} {# Added this line #}
            {{ form_row(registrationForm.plainPassword, { 'label': 'Mot de passe:' }) }}
            {{ form_row(registrationForm.agreeTerms, { 'label': 'Accepter les termes:' }) }}
            <button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}
